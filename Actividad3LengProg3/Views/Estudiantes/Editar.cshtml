@model EstudianteViewModel
@{
    ViewData["Title"] = "Registrar Estudiante";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Editar" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <label asp-for="NombreCompleto"></label>
        <input asp-for="NombreCompleto" />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Matricula"></label>
        <input asp-for="Matricula" />
        <span asp-validation-for="Matricula" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Carrera"></label>
        <input asp-for="Carrera" />
        <span asp-validation-for="Carrera" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="CorreoInstitucional"></label>
        <input asp-for="CorreoInstitucional" />
        <span asp-validation-for="CorreoInstitucional" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="FechaNacimiento"></label>
        <input asp-for="FechaNacimiento" type="date" />
        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Genero"></label>
        <select asp-for="Genero">
            <option value="">Seleccione...</option>
            <option>Masculino</option>
            <option>Femenino</option>
            <option>Otro</option>
        </select>
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Turno"></label>
        <select asp-for="Turno">
            <option value="">Seleccione...</option>
            <option>Matutino</option>
            <option>Vespertino</option>
            <option>Nocturno</option>
        </select>
        <span asp-validation-for="Turno" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="TipoIngreso"></label>
        <select asp-for="TipoIngreso">
            <option value="">Seleccione...</option>
            <option>Nuevo Ingreso</option>
            <option>Reingreso</option>
            <option>Transferencia</option>
        </select>
        <span asp-validation-for="TipoIngreso" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="EstaBecado"></label>
        <input asp-for="EstaBecado" type="checkbox" />
    </div>

    <div>
        <label asp-for="PorcentajeBeca"></label>
        <input asp-for="PorcentajeBeca" type="number" />
        <span asp-validation-for="PorcentajeBeca" class="text-danger"></span>
    </div>

    <div>
        <label>
            <input asp-for="AceptaTerminos" type="checkbox" />
            Acepto los términos y condiciones
        </label>
        <span asp-validation-for="AceptaTerminos" class="text-danger"></span>
    </div>

    <button type="submit">Registrar</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

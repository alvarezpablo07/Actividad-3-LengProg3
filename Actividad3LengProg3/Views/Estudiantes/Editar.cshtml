@model EstudianteViewModel
@{
    ViewData["Title"] = "Editar Estudiante";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Editar" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <label asp-for="NombreCompleto"></label>
        <input asp-for="NombreCompleto" class="form-control" />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Matricula"></label>
        <input asp-for="Matricula" class="form-control" />
        <span asp-validation-for="Matricula" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Carrera"></label>
        <input asp-for="Carrera" class="form-control" />
        <span asp-validation-for="Carrera" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="CorreoInstitucional"></label>
        <input asp-for="CorreoInstitucional" class="form-control" />
        <span asp-validation-for="CorreoInstitucional" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="FechaNacimiento"></label>
        <input asp-for="FechaNacimiento" type="date" class="form-control" />
        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Genero"></label>
        <input type="radio" asp-for="Genero" value="Masculino" /> Masculino
        <input type="radio" asp-for="Genero" value="Femenina" /> Femenina
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Turno"></label>
        <select asp-for="Turno" class="form-control">
            <option value="">Seleccione...</option>
            <option>Matutino</option>
            <option>Vespertino</option>
            <option>Nocturno</option>
        </select>
        <span asp-validation-for="Turno" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="TipoIngreso"></label>
        <select asp-for="TipoIngreso" class="form-control">
            <option value="">Seleccione...</option>
            <option>Nuevo Ingreso</option>
            <option>Reingreso</option>
            <option>Transferencia</option>
        </select>
        <span asp-validation-for="TipoIngreso" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="EstaBecado"></label>
        <input asp-for="EstaBecado" type="checkbox" />
    </div>

    <div>
        <label asp-for="PorcentajeBeca"></label>
        <input asp-for="PorcentajeBeca" type="number" class="form-control" />
        <span asp-validation-for="PorcentajeBeca" class="text-danger"></span>
    </div>

    <div>
        <label>
            <input asp-for="AceptaTerminos" type="checkbox" />
            Acepto los términos y condiciones
        </label>
        <span asp-validation-for="AceptaTerminos" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar los cambios</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}